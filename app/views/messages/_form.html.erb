<%= form_for(@message , html: {class: 'form-horizontal'} )  do |f| %>

<% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>

 <div class="form-group">
   <label class="col-sm-2 control-label" for="name">名前:</label>
    <div class="col-sm-10">
			  <%= f.text_field :name, class: "form-control", id: "name", placeholder:"名前" %>
		</div>
 </div>
 
 <div class="form-group">
   <label class="col-sm-2 control-label" for="name">年齢:</label>
    <div class="col-sm-10">
			  <%= f.text_field :age, class: "form-control", id: "age", placeholder:"年齢" %>
		</div>
 </div>
  
 <div class="form-group">
    <label class="col-sm-2 control-label" for="body">内容:</label>
       <div class="col-sm-10">
       <%= f.text_area :body, class: "form-control", id: "body", placeholder:"内容" %>
       </div>
 </div>     

 <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
 
  <%= f.submit class: "btn btn-sm btn-primary" %>
 
   </div>
</div>
<% end %>